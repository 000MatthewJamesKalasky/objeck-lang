{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "objeck-build",
            "type": "shell",
            "command": "obc -src *.obs -dest ${input:target}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "target",
            "description": "Target file",
            "default": "program.obe",
            "type": "promptString"
        },
    ]
}