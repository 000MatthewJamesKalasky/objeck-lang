use HTTP;
use JSON;
use Collection;

class HttpTest {
	function : Main(args : String[]) ~ Nil {
		parser := JSONParser->New(GetStatic());			
		root := parser->Parse();
		if(root <> Nil & root->GetType() = JSONType->OBJECT) {
			query := root->Get("query");
			if(query <> Nil & query->GetType() = JSONType->OBJECT) {
				results := query->Get("results");
				if(results <> Nil & results->GetType() = JSONType->OBJECT) {
					channel := results->Get("channel");
					if(channel <> Nil & channel->GetType() = JSONType->OBJECT) {
						item := channel->Get("item");
						if(item <> Nil & item->GetType() = JSONType->OBJECT) {
							condition := item->Get("condition");
							if(condition <> Nil & condition->GetType() = JSONType->OBJECT) {
								date := condition->Get("date");								
								temp := condition->Get("temp");
								"date={$date}, temp={$temp}"->PrintLine();
							};		
						};
					};
				};
			};
		};		
	}
	
