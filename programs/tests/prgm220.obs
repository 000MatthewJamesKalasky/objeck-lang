class Hello {
	function : Main(args : String[]) ~ Nil {
		if(args->Size() = 1) {
			pipe := System.IO.Pipe->New(args[0], Pipe->Mode->CREATE);
			if(<>pipe->Connect()) {
				"Unable to connect pipe!"->PrintLine();	
			};

			# byte
			pipe->ReadByte()->PrintLine();

			# bytes
			bytes := Byte->New[4];
			pipe->ReadBuffer(0, 4, bytes);
			bytes[0]->PrintLine();
			bytes[3]->PrintLine();

			# chars
			chars := Char->New[4];
			pipe->ReadBuffer(0, 4, chars);
			chars[0]->PrintLine();
			chars[3]->PrintLine();
			
			pipe->Close();
		};
	}
}
