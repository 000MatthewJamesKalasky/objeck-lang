use Game.SDL2;
use Game.Framework;
use Collection;

class Demo {
	@framework : GameFramework;

	@mouse_pos : Vector2;
	@x_pos : IntHolder;
	@y_pos : IntHolder;

	@follower : Rectangle;
	@follower_pos : Vector2;

	function : Main(args : String[]) ~ Nil {
		Demo->New()->Run();
	}

	New() {
		@framework := GameFramework->New(Game->SCREEN_WIDTH, Game->SCREEN_HEIGHT, "Platformer Demo");
		@framework->SetClearColor(Color->New(0, 0, 255));

		@follower := @framework->AddRectangle(15, 15);
		@follower->SetFill(true);
		@follower->SetColor(Color->New(255, 0, 0));
		@follower_pos := Vector2->New(25, 25);

		@mouse_pos := Vector2->New();
		@x_pos := IntHolder->New();
		@y_pos := IntHolder->New();
	}

	method : Run() ~ Nil {
		if(@framework->IsOk()) {

			quit := false;
			e := @framework->GetEvent();
			while(<>quit) {
				@framework->FrameStart();
				@framework->Clear();
				
				# process input
				while(e->Poll() <> 0) {
					if(e->GetType() = EventType->SDL_QUIT) {
						quit := true;
					};

					ProcessInput(e);
				};

				# update
				Update();
							
				# draw
				Draw();
			
				# show
				@framework->Show();
				@framework->FrameEnd();
			};
		}
		else {
			"--- Error Initializing Game Environment ---"->ErrorLine();
			return;
		};

		leaving {
			@framework->Quit();
		};
	}

	method : public : ProcessInput(e : Event) ~ Nil {
#~		
		if(e->GetType() = EventType->SDL_KEYDOWN) {
	        select(e->GetKey()->GetKeysym()->GetScancode()) {    	
	            label Scancode->SDL_SCANCODE_LEFT: {
	            }
	        };
	    }
	    else if(e->GetType() = EventType->SDL_KEYUP) {
	       	select(e->GetKey()->GetKeysym()->GetScancode()) {    	
	            label Scancode->SDL_SCANCODE_LEFT: {
	            }
	        };
	    }
	    else 
~#
	    if(e->GetType() = EventType->SDL_MOUSEMOTION) {
			Cursor->GetMouseState(@x_pos, @y_pos);

			@mouse_pos->SetX(@x_pos->Get());
			@mouse_pos->SetY(@y_pos->Get());

		};
	}

	method : public : Update() ~ Nil {
#		@follower->SetCenter(@x_pos->Get(), @y_pos->Get());

		@follower->SetCenter(@follower_pos->GetX(), @follower_pos->GetY());
	}

	method : public : Draw() ~ Nil {
		@follower->Render();
	}
}

consts Game {
	SCREEN_WIDTH := 800,
	SCREEN_HEIGHT := 600
}