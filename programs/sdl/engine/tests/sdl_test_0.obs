use SDL2;
use Game;

class Test {
	function : Main(args : String[]) ~ Nil {
		game := GameEngine->New(640, 480, "Engine Test");
		if(game->IsOk()) {
			e := game->GetEvent();
			
			image := game->AddImageSprite("../../../../programs/sdl/engine/tests/media/images/bg.png");

			quit := false;
			while(<>quit) {
				game->FrameStart();

				while(e->Poll() <> 0) {
					if(e->GetType() = EventType->SDL_QUIT) {
						quit := true;
					};

					image->Render(0, 0);
				};

				game->FrameEnd();
			};
		};

		leaving {
			game->Quit();
		};
	}
}
