use Collection;
use Game.SDL2;
use Game.Framework;

class BGTexture {
	@texture : Texture;
	@offset : Vector2;

	New(texture : Texture, offset : Vector2) {
		@texture := texture;
		@offset := offset;
	}

	method : public : GetTexture() ~ Texture { return @texture; }
	method : public : GetOffset() ~ Vector2 { return @offset; }
}