class Hanoi {
  function : Main(args : String[]) ~ Nil {
		Move(4, 1,2,3);
	}

	function: Move(n:Int, f:Int, t:Int, via:Int) ~ Nil {
		if(n = 1) {
			"Move disk from pole {$f} to pole {$t}"->PrintLine();
		} 
		else {
			Move(n - 1, f, via, t);
			Move(1, f, t, via);
			Move(n - 1, via, t, f);
		};		
	}
}
