class Test {
	function : Main(args : String[]) ~ Nil {
		input := "3+2+-1";

		oper := '\0';
		is_neg := false;
		lhs := 0;
		each(i : input) {
			char := input->Get(i);
			next_char := '\0';
			if(i + 1 < input->Size()) {
				next_char := input->Get(i + 1);
			};

			if(char->IsDigit()) {
				rhs := (char - '0')->As(Int);
				
				select(oper) {
					label '+': {
						lhs += rhs;
					}

					label '-': {
						lhs -= rhs;
					}

					label '*': {
						lhs *= rhs;
					}

					label '/': {
						lhs /= rhs;
					}

					other  {
						if(is_neg) {
							lhs := -rhs;
						}
						else {
							lhs := rhs;
						};
					}
				};

				oper := '\0';
			}
			else if(char = '+' | char = '-' | char = '*' | char = '/') {
				if((char = '-' & i = 0) | (next_char = '-')) {
					oper := '\0';
					is_neg := true;
				}
				else {
					oper := char;
					is_neg := false;
				};
			};
		};

		lhs->PrintLine();
	}
}
