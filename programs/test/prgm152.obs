class Test {
	function : Main(args : String[]) ~ Nil {
		if(args->Size() = 1) {
			IsInt(args[0])->PrintLine();
		};
	}

	function : IsInt(str : String) ~ Bool {
		i := 0;

		if(str->Size() > 0) {
			if(str->Get(0) = '+' | str->Get(0) = '-') {
				i += 1;
"-- 0 --"->PrintLine();				
			};

			if(str->Size() > i + 2) {
"-- 1 --"->PrintLine();				
				first := str->Get(i) = '0';
				second := str->Get(i + 1) = 'x' | str->Get(i + 1) = 'X';
"{$first}, {$second}"->PrintLine();

				if(first & second) {
					for(i := i + 2; i < str->Size(); i +=1;) {
						first := str->Get(i) >= '0' & str->Get(i) <= '9';
						second := str->Get(i) >= 'a' & str->Get(i) <= 'f';
						third := str->Get(i) >= 'A' & str->Get(i) <= 'F';

"{$first}, {$second}, {$third}"->PrintLine();

						if(<>first & <>second & <>third) {
							return false;
						};
					};

					return true;
				};
			}
			else {

			};
		};

		return false;
	}
}