class FuncHolder <T> {
	@func : (T) ~ T;

	New(func : (T) ~ T) {
		@func := func;
	}

	method : public : Get() ~ (T) ~ T {
		return @func;
	}

	method : public : Set(func : (T) ~ T) ~ Nil {
		@func := func;
	}
}