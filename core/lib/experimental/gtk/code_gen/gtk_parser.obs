		objk_buffer += "\t\t\t\t@lib_proxy := DllProxy->New(\"libobjk_gtk3\";\n";
		objk_buffer += "\t\t\t};\n\n";
		objk_buffer += "\t\t\treturn @lib_proxy;\n";
		objk_buffer += "\t\t}\n";
		objk_buffer += "\t}\n\n";
		
		@objk_out->WriteString(objk_buffer);
	}

