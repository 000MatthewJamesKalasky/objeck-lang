# ARGS=-g -Wall -pthread -D_X64 -D_DEBUG -D_DEBUGGER
# ARGS=-g -Wall -pthread -D_X64 -D_DEBUGGER
ARGS=-O3 -Wall -Wall -Wno-unused-function -std=c++11 -Wno-strict-overflow -pthread -D_X64 -D_DEBUGGER

CC=g++
SRC=tree.o scanner.o parser.o debugger.o
OBJ_LIBS=../vm/compiler.a ../vm/jit_amd_lp64.a ../vm/memory.a
VM_PATH=../vm
MEM_PATH=../vm/arch/posix
JIT_PATH=../vm/arch/jit/amd64
EXE=obd

$(EXE): $(SRC) $(OBJ_LIBS)
	$(CC) -m64 -pthread -o $(EXE) $(SRC) $(OBJ_LIBS) -Wunused-function -ldl -lcrypto -lssl

../vm/compiler.a:
	cd $(VM_PATH); make -f make/Makefile.obd64

../vm/memory.a:
	cd $(MEM_PATH); make -f Makefile.64

../vm/jit_amd_lp64.a:
	cd $(JIT_PATH); make -f Makefile.64
	
%.o: %.cpp
	$(CC) -m64 $(ARGS) -c $< 

clean:
	cd $(VM_PATH); make -f make/Makefile.obd64 clean
	rm -f $(EXE) *.o *~
