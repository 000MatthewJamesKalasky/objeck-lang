ARGS=-O3 -Wall -Wno-deprecated-declarations -Wno-unused-function -pthread -D_X64 -D_OSX -D_DEBUGGER

CC=g++
SRC=tree.o scanner.o parser.o debugger.o
OBJ_LIBS=../vm/compiler.a ../vm/jit_amd_lp64.a ../vm/memory.a
VM_PATH=../vm
MEM_PATH=../vm/arch/posix
JIT_PATH=../vm/arch/jit/amd644
EXE=obd

$(EXE): $(SRC) $(OBJ_LIBS)
	$(CC) -m64 -pthread -o $(EXE) $(SRC) $(OBJ_LIBS) -ldl -lcrypto -lssl

../vm/compiler.a:
	cd $(COMPILER_PATH); make -f make/Makefile.OSX.obd64

../vm/memory.a:
	cd $(MEM_PATH); make -f make/Makefile.OSX.64

../vm/jit_amd_lp64.a:
	cd $(JIT_PATH); make -f make/Makefile.OSX.64
	
%.o: %.cpp
	$(CC) -m64 $(ARGS) -c $< -I/usr/local/openssl/include 

clean:
	cd $(COMPILER_PATH); make -f make/Makefile.OSX.obd64 clean
	rm -f $(EXE).exe $(EXE) *.exe *.o *~
