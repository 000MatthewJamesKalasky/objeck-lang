ARGS=-O3 -D_X64 -D_GNU_SOURCE -Wall -Wno-unused-function -std=c++17 -Wno-deprecated-declarations -Wunused-variable

CC=g++
AR=ar
COMMON_LIBS=jit_common.a
COMMON_PATH=..
SRC=../jit_common.o jit_amd_lp64.o
LIB=../../../jit_amd_lp64.a

$(LIB): $(COMMON_LIBS) $(SRC)
	$(AR) -cvq $(LIB) $(SRC)

jit_common.a:
	cd $(COMMON_PATH); make -f make/Makefile.cygwin.amd64

%.o: %.cpp
	$(CC) -m64 $(ARGS) -c $< 

clean:
	cd $(COMMON_PATH); make -f make/Makefile.cygwin.amd64 clean
	rm -f *.o *~ $(LIB)
