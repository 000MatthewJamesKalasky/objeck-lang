# ARGS=-g -D_DEBUG -D_X64 -Wall -Wno-unused-function -std=c++11 -std=c++11 -Wno-deprecated-declarations
ARGS=-O3 -D_OSX -D_X64 -Wall -Wno-unused-function -std=c++11 -std=c++11 -Wno-deprecated-declarations
# ARGS=-O3 -D_TIMING -D_X64 -Wno-unused-function -Wno-deprecated-declarations

CC=g++
AR=ar
COMMON_LIBS=jit_common.a
COMMON_PATH=..
SRC=jit_amd_lp64.o
LIB=../../../jit_amd_lp64.a

$(LIB): $(COMMON_LIBS) $(SRC)
	$(AR) -cvq $(LIB) $(SRC)

jit_common.a:
	cd $(COMMON_PATH); make -f make/Makefile.64

%.o: %.cpp
	$(CC) -m64 $(ARGS) -c $< -I../../../../lib/openssl/macos/include

clean:
    cd $(COMMON_PATH); make -f make/Makefile.64 clean
	rm -f *.o *~ $(LIB)
