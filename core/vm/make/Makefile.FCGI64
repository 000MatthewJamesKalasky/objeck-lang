# ARGS=-g -Wall -D_X64 -D_DEBUG -pthread -Wno-unused-function 
ARGS=-O3 -Wall -D_X64 -pthread -Wno-unused-function -std=c++11

CC=g++
SRC=common.o interpreter.o loader.o vm.o fcgi_main.o 
OBJ_LIBS= jit_amd_lp64.a memory.a
MEM_PATH=arch/posix
JIT_PATH=arch/jit/amd64
EXE=obr_fcgi

$(EXE): $(SRC) $(OBJ_LIBS)
	$(CC) -m64 -o $(EXE) $(SRC) $(OBJ_LIBS) -lssl -lcrypto -ldl -lfcgi -pthread

memory.a:
	cd $(MEM_PATH); make -f Makefile.64
	
jit_amd_lp64.a:
	cd $(JIT_PATH); make -f Makefile.64
	
%.o: %.cpp
	$(CC) -m64 $(ARGS) -c $< 

clean:
	cd $(MEM_PATH); make clean -f Makefile.64
	cd $(JIT_PATH); make clean -f Makefile.64
	rm -f $(EXE) *.o *~
