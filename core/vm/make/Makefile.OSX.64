# ARGS=-g -Wall -pthread -D_OSX -D_X64 -D_JIT_SERIAL -D_OSX -D_DEBUG -Wno-unused-function -Wno-deprecated-declarations
# ARGS=-g -Wall -pthread -D_X64 -D_OSX -D_JIT_SERIAL -D_TIMING -Wno-unused-function -Wno-deprecated-declarations
ARGS=-O3 -Wall -pthread -D_OSX -D_X64 -D_OBJECK_NATIVE_LIB_PATH -Wno-unused-function -Wno-deprecated-declarations

CC=clang++
SRC=common.o interpreter.o loader.o vm.o posix_main.o 
OBJ_LIBS=jit_amd_lp64.a memory.a
MEM_PATH=arch
JIT_PATH=arch/jit/amd64
EXE= obr

$(EXE): $(SRC) $(OBJ_LIBS)
	$(CC) -m64 -o $(EXE) $(SRC) -L/usr/local/lib $(OBJ_LIBS) -lssl -lcrypto -ldl

memory.a:
	cd $(MEM_PATH); make -f Makefile.OSX.64
	
jit_amd_lp64.a:
	cd $(JIT_PATH); make -f Makefile.OSX.64
	
%.o: %.cpp
	$(CC) -m64 $(ARGS) -c $< -I/usr/local/ssl/include

clean:
	cd $(MEM_PATH); make clean -f Makefile.OSX.64
	cd $(JIT_PATH); make clean -f Makefile.OSX.64
	rm -f $(EXE).exe $(EXE) *.exe *.o *~
