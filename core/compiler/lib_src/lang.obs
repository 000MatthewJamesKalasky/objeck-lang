			if(offset < 0) {
				return;
			};
			
			if(@pos + max >= @max) {
				# expand string
				@max := (@max + max) * 2;
				tmp : Char[] := Char->New[@max];
				# copy elements
				Runtime->Copy(tmp, 0, @string, 0, @string->Size());
				@string := tmp;
			};

			end := offset + max;
			for(i : Int := offset; i < end & array[i] <> '\0'; i += 1;) {
				@string[@pos] := array[i];
				@pos += 1;
			};
