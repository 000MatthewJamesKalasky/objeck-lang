			for(i : Int := offset; i < end & array[i] <> '\0'; i += 1;) {
				@string[@pos] := array[i];
				@pos += 1;
			};
		}

		#~
		Appends a character
		@param c character to append
		~#
		method : public : native : Append(c : Char) ~ Nil {
			if(@pos >= @max) {
				# expand string
				@max := @max * 2;
				tmp : Char[] := Char->New[@max];
				# copy elements
				Runtime->Copy(tmp, 0, @string, 0, @string->Size());
				@string := tmp;
			};

			@string[@pos] := c;
			@pos += 1;
		}
		
