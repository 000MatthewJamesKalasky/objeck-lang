use Web.HTTP, Collection, Data.JSON, System.Time, System.IO.Filesystem;

#~
Provides support for conversions (-lib misc)
~#	
bundle System.Time {
	#~
	Utilities for handling dates.
	~#
	class DateUtility {
		#~
		Parses a date from a String.
		@param date_str date
		@param format date string format <p>options: <ul> <li>month=MM</li><li>day=dd</li><li>year=yy(yy)</li><li>hour=hh</li><li>minutes=mm</li><li>seconds=ss</p><ul>
		@param gmt true is GMT, false otherwise
		@return Date instance
		~#
		function : Parse(date_str : String, format : String, gmt : Bool) ~ Date {
			parts := Map->New()<IntRef, DatePart>;
		
			# month
			month := format->Find("MM");
			if(month > -1) {
				parts->Insert(month, DatePart->New(month, DatePart->Type->Month));
			};

			# day
			day := format->Find("dd");
			if(day > -1) {
				parts->Insert(day, DatePart->New(day, DatePart->Type->Day));
			};

			# year
			long_year_format := true;
			year := format->Find("yyyy");
			if(year > -1) {
				parts->Insert(year, DatePart->New(year, DatePart->Type->Year));
			}
			else {
				year := format->Find("yy");
				if(year > -1) {
					parts->Insert(year, DatePart->New(year, DatePart->Type->Year));
					long_year_format := false;
				};
			};
	
			# hour
			hours := format->Find("hh");
			if(hours > -1) {
				parts->Insert(hours, DatePart->New(hours, DatePart->Type->Hour));
			};

			# mins
			mins := format->Find("mm");
			if(mins > -1) {
				parts->Insert(mins, DatePart->New(mins, DatePart->Type->Min));
			};

			# secs
			secs := format->Find("ss");
			if(secs > -1) {
				parts->Insert(secs, DatePart->New(secs, DatePart->Type->Sec));
			};

			date_month := 0; date_day := 0; date_year := 0;
			date_hours := 0; date_mins := 0; date_secs := 0;
		
			offset := 0;
			values := parts->GetValues()<DatePart>;
			each(i : values) {
				part := values->Get(i);
				type := part->GetType();

				select(type) {
					label DatePart->Type->Month: {
						pos := month + offset + 1;
						if(pos > -1 & pos < date_str->Size()) { 
							if(date_str->Get(pos)->IsDigit()) {
								date_month := date_str->SubString(month + offset, 2)->ToInt();
							}
							else {
								date_month := date_str->SubString(month + offset, 1)->ToInt();
								offset -= 1;
							};
						};
					}

					label DatePart->Type->Day: {
						pos := day + offset + 1;
						if(pos > -1 & pos < date_str->Size()) { 
							if(date_str->Get(pos)->IsDigit()) {
								date_day := date_str->SubString(day + offset, 2)->ToInt();
							}
							else {
								date_day := date_str->SubString(day + offset, 1)->ToInt();
								offset -= 1;
							};
						};
					}
				
					label DatePart->Type->Year: {
						pos := year + offset;
						if(pos > -1 & pos < date_str->Size()) {
							if(long_year_format) {
								date_year := date_str->SubString(year + offset, 4)->ToInt();
							}	
							else {
								date_year := 2000;
								date_year += date_str->SubString(year + offset, 2)->ToInt();
							};
						};
					}

					label DatePart->Type->Hour: {
						pos := hours + offset + 1;
						if(pos > -1 & pos < date_str->Size()) { 
							if(date_str->Get(pos)->IsDigit()) {
								date_hours := date_str->SubString(hours + offset, 2)->ToInt() - 1;
							}
							else {
								date_hours := date_str->SubString(hours + offset, 1)->ToInt() - 1;
								offset -= 1;
							};
						};
					}

					label DatePart->Type->Min: {
						pos := mins + offset + 1;
						if(pos > -1 & pos < date_str->Size()) { 
							if(date_str->Get(pos)->IsDigit()) {
								date_mins := date_str->SubString(mins + offset, 2)->ToInt();
							}
							else {
								date_mins := date_str->SubString(mins + offset, 1)->ToInt();
								offset -= 1;
							};
						};
					}

					label DatePart->Type->Sec: {
						pos := secs + offset + 1;
						if(pos > -1 & pos < date_str->Size()) { 
							if(date_str->Get(pos)->IsDigit()) {
								date_secs := date_str->SubString(secs + offset, 2)->ToInt();
							}
							else {
								date_secs := date_str->SubString(secs + offset, 1)->ToInt();
								offset -= 1;
							};
						};
					}
				};
			};

			date := Date->New(date_day, date_month, date_year, gmt);
			date->AddHours(date_hours);
			date->AddMinutes(date_mins);
			date->AddSeconds(date_secs);

			return date;
		}

		#~
		Formats date into a string
		@param date date 
		@param format date string format <p>options: <ul> <li>month=MM</li><li>day=dd</li><li>year=yy(yy)</li><li>hour=hh</li><li>minutes=mm</li><li>seconds=ss</p><ul>
		@return Date instance
		~#
		function : Format(date : System.Time.Date, format : String) ~ String {
			day := date->GetDay();
			hours := date->GetHours();
			mins := date->GetMinutes();
			mon := date->GetMonth();
			secs := date->GetSeconds();
			year := date->GetYear();

			buffer := "";

			for(i := 0; i < format->Size(); i += 1;) {
				cur_char := format->Get(i);
				next_char := '\0';
				if(i + 1 < format->Size()) {
					next_char := format->Get(i + 1);
				};

				# day
				if(cur_char = 'd' & next_char = 'd') {
					buffer->Append(day);
					i += 1;
				}
				# month
				else if(cur_char = 'M' & next_char = 'M') {
					buffer->Append(mon);
					i += 1;
				}
				# year
				else if(cur_char = 'y' & next_char = 'y') {
					if(i + 3 < format->Size() & format->Get(i + 2) = 'y' & format->Get(i + 3) = 'y') {
						next_char := format->Get(i + 1);
						i += 3;
						buffer->Append(year);
					}
					else {
						i += 1;
						buffer->Append(year - 2000);
					};
				}
				# hours
				else if(cur_char = 'h' & next_char = 'h') {
					buffer->Append(hours);
					i += 1;
				}
				# minutes
				else if(cur_char = 'm' & next_char = 'm') {
					buffer->Append(mins);
					i += 1;
				}
				# seconds
				else if(cur_char = 's' & next_char = 's') {
					buffer->Append(secs);
					i += 1;
				}
				# other
				else {
					buffer->Append(cur_char);
				}
			};

			return buffer;
		}

		#~
		Get the network time
		@return triplet with: unix time, UTC time and local time
		~#
		function : GetNetworkTime() ~ Collection.Tuple.Triplet<IntRef, Date, Date> {
			response := HttpClient->QuickGet(Url->New("http://worldtimeapi.org/api/ip"));
			if(response->GetCode() = 200) {
				response_json := JsonParser->TextToElement(response->GetContent()->ToString());
				if(response_json <> Nil) {
					unix_time_json := response_json->Get("unixtime");					
					utc_time_json := response_json->Get("utc_datetime");
					dst_time_json := response_json->Get("datetime");
					if(unix_time_json <> Nil & utc_time_json <> Nil & dst_time_json <> Nil) {
						utc_date := System.Time.DateUtility->Parse(utc_time_json->GetString(), "yyyy-MM-ddThh:mm:ss", false);
						dst_date := System.Time.DateUtility->Parse(dst_time_json->GetString(), "yyyy-MM-ddThh:mm:ss", false);	
						
						return Collection.Tuple.Triplet->New(IntRef->New(unix_time_json->GetInt()), utc_date, dst_date)<IntRef, Date, Date>;
					};
				};
			};

			return Nil;
		}
	}
	
	class : private : DatePart {
		@index : Int;
		@type : Type;

		enum Type {
			Month,
			Day,
			Year,
			Hour,
			Min,
			Sec
		}

		New(index : Int, type : Type) {
			@index := index;
			@type := type;
		}

		method : public : GetType() ~ Type {
			return @type;
		}

		method : public : GetIndex() ~ Int {
			return @index;
		}
	}
}

#~
Various support utilities (-lib misc)
~#	
bundle System.Utility {
	#~
	Utilities for parsing
	~#
	class Parser {
		#~
		Simple tokenizer 
		@param stream_in source input
		@return vector of string tokens
		~#
		function : Tokenize(stream_in : String) ~ Vector<String> {
			tokens := Vector->New()<String>;

			each(i : stream_in) {
				# identifier
				if(stream_in->Get(i)->IsChar()) {
					start := i;
					while(stream_in->Get(i)->IsChar() | stream_in->Get(i)->IsDigit() | stream_in->Get(i) = '_') {
						i += 1;
					};
					tokens->AddBack(stream_in->SubString(start, i - start));
					i -= 1;
				}
				# number
				else if(stream_in->Get(i)->IsDigit()) {
					start := i;
					while(stream_in->Get(i)->IsDigit() | stream_in->Get(i) = '.') {
						i += 1;
					};
					tokens->AddBack(stream_in->SubString(start, i - start));
					i -= 1;
				}
				# other
				else {
					value := stream_in->Get(i);
					if(value <> ' ' & value <> '\t' & value <> '\r' & value <> '\n') {
						tokens->AddBack(value->ToString());
					};
				};
			};

			return tokens;
		}

		#~
		Command line parser
		@param args command line arguments
		@return name/value pairs
		~#
		function : CommandParameters(args : String[]) ~ Hash<String, String> {
			params := Hash->New()<String, String>;

			each(arg := args) {
				name := "";
				value := "";

				index := arg->Find('=');
				if(index > 0) {
					name += arg->SubString(index);
					index += 1;
					value += arg->SubString(index, arg->Size() - index);
				}
				else {
					name := arg;
				};

				params->Insert(name, value);
			};

			return params;
		}
	}

	#~
	Console spinner
	~#
	class Spinner {
		@state : static : Int;
		@count : static : Int;

		#~
		Prints and advances the spinner to the next state
		~#
		function : Next() ~ Nil {
			select(@state) {
				label 0 {
					"⋅\r"->Print();
					@state += 1;
				}

				label 1 {
					"•\r"->Print();
					@state += 1;
				}

				label 2 {
					"●\r"->Print();
					@state += 1;
				}

				label 3 {
					"⬤\r"->Print();
					@state := 0;
				}
			};

			@count += 1;
			Console->Flush();
		}

		#~
		Prints the final state
		~#
		function : Last() ~ Nil {
			"\r·"->Print();
			Console->Flush();
		}
	}

	#~
	Code formatter
	~#
	class CodeFormatter {
		@token : Token;
		@prev_token : Token;
		@next_token : Token;
		@skip_space : Bool;

		@stmt_space : Bool;
		@ident_space : Int;

		@buffer : String;
		@start_range : Int;
		@end_range : Int;

		@trim_trailing : Bool;
		@is_generic : Bool;

		ASCII_COLOR_TYPE : String;
		ASCII_COLOR_KEYWORD : String;
		ASCII_COLOR_OPER : String;
		ASCII_COLOR_CONST : String;
		ASCII_COLOR_BRACKET : String;
		ASCII_COLOR_COMMENT : String;
		ASCII_END : String;

		#~
		Constructor
		@param options options
	
		<p>Support for following options:<p>
		<ul>
		  <li>"function-space" - (true|false)</li>
		  <li>"ident-space" - (number|0 for tabs)</li>
		  <li>"trim-trailing" - (true|false)</li>
		  <li>"start-line" - (optional|number)</li>
		  <li>"end-line" - (optional|number)</li>
		</ul>		
		~#
		New(options : Map<String, String>) {
			ASCII_COLOR_KEYWORD := "\x1B[33m";
			ASCII_COLOR_TYPE := "\x1B[94m";
			ASCII_COLOR_OPER := "\x1B[32m";
			ASCII_COLOR_CONST := "\x1B[36m";
			ASCII_COLOR_BRACKET := "\x1B[31m";
			ASCII_COLOR_COMMENT := "\x1B[90m";
			ASCII_END := "\x1b[0m";

			# get options
			stmt_space_check := options->Find("function-space");
			@stmt_space := stmt_space_check <> Nil & stmt_space_check->Equals("true");

			# trim trailing
			trim_trailing_check := options->Find("trim-trailing");
			@trim_trailing := trim_trailing_check <> Nil & trim_trailing_check->Equals("true");

			@ident_space := 0;
			ident_space_check := options->Find("ident-space");
			if(ident_space_check <> Nil & <>ident_space_check->IsEmpty()) {
				@ident_space := ident_space_check->ToInt() - 1;
			};
			
			# get start and end range
			@start_range := -1;
			start_line_check := options->Find("start-line");
			if(start_line_check <> Nil & <>start_line_check->IsEmpty()) {
				@start_range := start_line_check->ToInt();
			};

			@end_range := -1;
			end_line_check := options->Find("end-line");
			if(end_line_check <> Nil & <>end_line_check->IsEmpty()) {
				@end_range := end_line_check->ToInt();
			};


			@buffer := "";
		}

		method : AppendBuffer(str : String) ~ Nil {
			if(InRange()) {
				if(@buffer->EndsWith("; ") | @buffer->EndsWith("} ")) {
					@buffer->Pop();
				};

				@buffer += str;
			};
		}

		method : AppendBuffer(char : Char) ~ Nil {
			if(InRange()) {
				if(@buffer->EndsWith("; ") | @buffer->EndsWith("} ")) {
					@buffer->Pop();
				};

				@buffer += char;
			};
		}

		method : PopBuffer() ~ Nil {
			if(InRange()) {
				@buffer->Pop();
			};
		}

		method : InRange() ~ Bool {
			return (@start_range < 0 & @end_range < 0) | (@token <> Nil & @start_range <= @token->GetLine() & @end_range >= @token->GetLine());
		}	

		method : CheckGeneric(tokens : Vector<Token>, i : Int) ~ Bool {
			level := 0;
			
			token := tokens->Get(i);
			while(token->GetType() <> System.Utility.Token->Type->SEMI & token->GetType() <> System.Utility.Token->Type->OTHER) {
				select(token->GetType()) {
					label System.Utility.Token->Type->LESS {
						level += 1;
					}

					label System.Utility.Token->Type->GTR {
						level -= 1;
					}

					label System.Utility.Token->Type->IDENT
					label System.Utility.Token->Type->STRING_ID
					label System.Utility.Token->Type->COMMA {
						# skip
					}

					other {
						return false;
					}
				}

				if(level = 0) {
					return true;
				};

				token := tokens->Get(++i);
			}

			return false;
		}

		#~
		@param source source code
		@param is_color true for ascii color formtting, false otherwise
		@return formatter code
		~#
		method : public : native : Format(source : String, is_color : Bool) ~ String {
			scanner := Scanner->New(source);
			if(scanner->Scan()) {
				tab_space := 0;
				insert_tabs := false;

				@skip_space := false;
				in_label := false;
				in_for := false;
				in_consts := false;

				@prev_token := Token->New(-1, System.Utility.Token->Type->OTHER, "other");

				tokens := scanner->GetTokens();
				each(i : tokens) {
					if(insert_tabs) {
						TabSpace(tab_space, @ident_space);
						insert_tabs := false;
					};

					# set current, previous and next tokens
					if(@token <> Nil) {
						@prev_token := @token;
					};

					if(@next_token <> Nil) {
						@token := @next_token;
					}
					else {
						@token := tokens->Get(i);
					};

					if(i + 1 < tokens->Size()) {
						@next_token := tokens->Get(i + 1);
					}
					else {
						@next_token := Token->New(-1, System.Utility.Token->Type->OTHER, "other");
					};
					
					select(@token->GetType()) {
						label System.Utility.Token->Type->CLASS_ID {
							VerticalSpace(@prev_token, tab_space, @ident_space);
							
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};

							AppendBuffer("class");

							if(is_color) {
								AppendBuffer(ASCII_END);
							}
						}

						label System.Utility.Token->Type->FUNCTION_ID {
							VerticalSpace(@prev_token, tab_space, @ident_space);

							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("function");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->METHOD_ID {
							VerticalSpace(@prev_token, tab_space, @ident_space);
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};

							AppendBuffer("method");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->PUBLIC_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};

							AppendBuffer("public");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->PRIVATE_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};

							AppendBuffer("private");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->IF_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("if");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->ELSE_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer('\n');
							TabSpace(tab_space, @ident_space);
							AppendBuffer("else");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}					

						label System.Utility.Token->Type->DO_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("do");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->WHILE_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("while");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->FOR_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("for");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};

							in_for := true;
						}

						label System.Utility.Token->Type->EACH_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("each");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->BREAK_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("break");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->CONTINUE_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("continue");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->RETURN_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("return");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->ALIAS_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("alias");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->LEAVING_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("leaving");
						}

						label System.Utility.Token->Type->USE_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("use");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->NATIVE_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("native");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->STATIC_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("static");
						}

						label System.Utility.Token->Type->SELECT_ID {
							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};
							
							AppendBuffer("select");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};
						}

						label System.Utility.Token->Type->LABEL_ID {
							VerticalSpace(@prev_token, tab_space, @ident_space);

							if(is_color) {
								AppendBuffer(ASCII_COLOR_KEYWORD);
							};

							AppendBuffer("label");

							if(is_color) {
								AppendBuffer(ASCII_END);
							};

							in_label := true;
							@skip_space := false;
						}

						label System.Utility.Token->Type->OTHER_ID {
							VerticalSpace(@prev_token, tab_space, @ident_space);
