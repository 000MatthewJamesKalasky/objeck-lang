		}

		method : NextChar() ~ Nil {
			if(@buffer_index < @buffer->Size()) {
				@cur_char := @buffer[@buffer_index++];
				@line_pos += 1;

				if(@buffer_index < @buffer->Size()) {
					@next_char := @buffer[@buffer_index];
				}
				else {
					@next_char := '\0';
				};
			}
			else {
				@cur_char := next_char := '\0';
			};
		}

		method : Whitespace() ~ Nil {
			new_line_count := 0;

			while(@cur_char = ' ' | @cur_char = '\t' | @cur_char = '\r' | @cur_char = '\n') {
				if(@cur_char = '\n') {
					@line_num += 1;
					new_line_count += 1;
					@line_pos := 1;
				};

				NextChar();
			};
			
			if(new_line_count > 1) {
				for(i := 0; i < new_line_count; i += 2;) {
					@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->VTAB, "vtab"));
				};
			};
		}

		method : public : GetTokens() ~ Vector<Token> {
			return @tokens;
		}

		method : public : Scan() ~ Bool {
			NextChar();

			while(@cur_char <> '\0') {
				Whitespace();
				
				# comment
				if(@cur_char = '#') {
					NextChar();

					if(@cur_char = '~') {
						NextChar();
						start := @buffer_index - 1;
						while(<>(@cur_char = '~' & @next_char = '#')) {
							if(@cur_char = '\n') {
								@line_num += 1;
								@line_pos := 1;
							};

							NextChar();
						};
						end := @buffer_index;
						NextChar();
						NextChar();

						comment :=  String->New(@buffer, start, end - start - 1);
						@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->MULTI_COMMENT, comment));
					}
					else {
						start := @buffer_index - 1;
						while(<>@cur_char = '\n') {
							NextChar();
						};
						end := @buffer_index;
						NextChar();

						comment :=  String->New(@buffer, start, end - start - 1);
						@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->LINE_COMMENT, comment));
					};
				}
				# string literal
				else if(@cur_char = '"') {
					NextChar();				
					is_escape := false;

					start := @buffer_index - 1;
					while(is_escape | @cur_char <> '"') {
						if(is_escape) {
							is_escape := false;
						};

						if(@cur_char = '\\') {
							is_escape := true;
						};

						NextChar();
					};				
					end := @buffer_index;
					NextChar();

					string_lit :=  String->New(@buffer, start, end - start - 1);
					@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->STRING_LIT, string_lit));
				}
				# char const
				else if(@cur_char = '\'') {
					NextChar();				

					start := @buffer_index - 1;
					if(@cur_char <> '\\') {
						NextChar();
						if(@cur_char = '\\') {
							NextChar();
						};
					};				
					end := @buffer_index;
					NextChar();

					string_lit :=  String->New(@buffer, start, end - start - 1);
					@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->CHAR_LIT, string_lit));
				}
				# keyword or variable
				else if(@cur_char->IsChar() | @cur_char = '@' | @cur_char = '$') {
					start := @buffer_index - 1;
					while(@cur_char->IsChar() | @cur_char->IsDigit() | @cur_char = '_' | @cur_char = '@' | @cur_char = '.' | @cur_char = '$') {
						NextChar();
					};
					end := @buffer_index;
					word := String->New(@buffer, start, end - start - 1);
					
					keyword := @keywords->Find(word);
					if(keyword = Nil) {
						@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->IDENT, word));
					}
					else {
						@tokens->AddBack(keyword->Copy(@line_num));
					};
				}
				# number or digit
				else if(@cur_char->IsDigit() | @cur_char = '.' | (@cur_char = '+' & (@next_char->IsDigit()| @cur_char = '.')) | 
						@cur_char = '-' & (@next_char->IsDigit() | @cur_char = '.')) {
					start := @buffer_index - 1;

					if(@cur_char = '+' | @cur_char = '-') {
						NextChar();
					};

					while(@cur_char = '.' | @cur_char->IsDigit() | @cur_char = 'x' | @cur_char = 'X' | 
							(@cur_char >= 'a' & @cur_char <= 'f') | (@cur_char >= 'A' & @cur_char <= 'F')) {
						NextChar();
					};
					end := @buffer_index;

					num_lit := String->New(@buffer, start, end - start - 1);
					@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->NUM_LIT, num_lit));
				}
				else {
					select(@cur_char) {
						label '#' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->POUND, "pound"));
							NextChar();
						}

						label '@' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->AT, "at"));
							NextChar();
						}

						label '{' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->OCBRACE, "ocbrace"));
							NextChar();
						}

						label '}' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->CCBRACE, "ccbrace"));
							NextChar();
						}

						label '(' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->OPREN, "opern"));
							NextChar();
						}

						label ')' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->CPREN, "cpren"));
							NextChar();
						}

						label '_' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->DASH, "dash"));
							NextChar();
						}

						label '[' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->OBRACE, "obrace"));
							NextChar();
						}

						label ']' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->CBRACE, "cbrace"));
							NextChar();
						}

						label ',' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->COMMA, "COMMA"));
							NextChar();
						}

						label ':' {
							if(@next_char = '=') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->ASGN, "asgn"));
								NextChar();
							}
							else {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->COLON, "colon"));
							};
							NextChar();
						}

						label '~' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->TILDE, "tilde"));
							NextChar();
						}

						label ';' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->SEMI, "semi"));
							NextChar();
						}

						label '+' {
							if(@next_char = '=') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->ADD_ASN, "add_asn"));
								NextChar();
							}
							else if(@next_char = '+') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->ADD_ADD, "add_add"));
								NextChar();
							}
							else {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->ADD, "add"));
							};
							NextChar();
						}

						label '-' {
							if(@next_char = '>') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->ASSESSOR, "assessor"));
								NextChar();
							}
							else if(@next_char = '=') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->SUB_ASN, "sub_asn"));
								NextChar();
							}
							else if(@next_char = '-') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->SUB_SUB, "sub_sub"));
								NextChar();
							}
							else {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->SUB, "sub"));
							};
							NextChar();
						}

						label '→' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->ASSESSOR, "assessor"));
							NextChar();
						}

						label '←' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->ASGN, "asgn"));
							NextChar();
						}

						label '≠' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->NEQL, "neql"));
							NextChar();
						}

						label '≥' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->GTR_EQL, "gtr_eql"));
							NextChar();
						}
						
						label '≤' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->LESS_EQL, "less_eql"));
							NextChar();
						}

						label '\e' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->ESCAPE, "\e"));
							NextChar();
						}

						label '*' {
							if(@next_char = '=') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->MUL_ASN, "mul_asn"));
								NextChar();
							}
							else {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->MUL, "mul"));
							};
							NextChar();
						}

						label '/' {
							if(@next_char = '=') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->DIV_ASN, "div_asn"));
								NextChar();
							}
							else {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->DIV, "div"));
							};
							NextChar();
						}

						label '%' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->MOD, "mod"));
							NextChar();
						}

						label '&' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->AND, "and"));
							NextChar();
						}

						label '|' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->OR, "or"));
							NextChar();
						}

						label '?' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->QUESTION, "question"));
							NextChar();
						}

						label '\'' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->QUOTE, "quote"));
							NextChar();
						}

						label '\\' {
							@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->FWD_SLASH, "fwd_slash"));
							NextChar();
						}

						label '=' {
							if(@next_char = '>') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->NEQL, "neql"));
								NextChar();
							}
							else {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->EQL, "eql"));
								NextChar();
							};
						}

						label '<' {
							if(@next_char = '>') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->NEQL, "neql"));
								NextChar();
							}
							else if(@next_char = '=') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->LAMBDA, "less_eql"));
								NextChar();
							}
							else {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->LESS, "less"));
							};
							NextChar();
						}

						label '>' {
							if(@next_char = '=') {
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->GTR_EQL, "gtr_eql"));
								NextChar();
							}
							else { 
								@tokens->AddBack(Token->New(@line_num, System.Utility.Token->Type->GTR, "gtr"));
							};
							NextChar();
						}

						other {
							if(@cur_char <> '\0') {
								id := @cur_char->As(Int);
								next_id := @next_char->As(Int);
								"\n--- [Other ({$@line_num},{$@line_pos}): '{$@cur_char}'({$id}), '{$@next_char}'({$next_id})] ---"->ErrorLine();						
								Runtime->Exit(1);
							};
						}
					};
				};
			};

			return true;
		}
	}

