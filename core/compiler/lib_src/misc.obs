							tab_space -= 1;
							TabSpace(tab_space, @ident_space);
							AppendBuffer('}'); # TODO: Fix me!

							if(in_consts) {
								in_consts := false;
							};
						}

						label System.Utility.Token->Type->VTAB {
							if(@next_token->GetType() <> System.Utility.Token->Type->CCBRACE) {
								AppendBuffer("\n\n");
