			@keywords->Insert("consts", Token->New(@line_num, System.Utility.Token->Type->CONSTS_ID, "consts_id"));
			@keywords->Insert("reverse", Token->New(@line_num, System.Utility.Token->Type->REVERSE_ID, "reverse_id"));
			@keywords->Insert("Parent", Token->New(@line_num, System.Utility.Token->Type->PARENT_ID, "parent_id"));
			@keywords->Insert("from", Token->New(@line_num, System.Utility.Token->Type->FROM_ID, "from_id"));
			@keywords->Insert("true", Token->New(@line_num, System.Utility.Token->Type->TRUE_ID, "true_id"));
			@keywords->Insert("false", Token->New(@line_num, System.Utility.Token->Type->FALSE_ID, "false_id"));
			@keywords->Insert("New", Token->New(@line_num, System.Utility.Token->Type->NEW_ID, "new_id"));
			@keywords->Insert("As", Token->New(@line_num, System.Utility.Token->Type->AS_ID, "as_id"));
			@keywords->Insert("TypeOf", Token->New(@line_num, System.Utility.Token->Type->TYPE_OF_ID, "typeof_id"));
			@keywords->Insert("critical", Token->New(@line_num, System.Utility.Token->Type->CRITICAL_ID, "critical_id"));
