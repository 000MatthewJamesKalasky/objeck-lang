			buffer := "";

			select(@type) {
				label Type->SELECT: {
					buffer += "SELECT";
				}

				label Type->UPDATE: {
					buffer += "UPDATE";
				}

				label Type->FROM: {
					buffer += "FROM";
				}

				label Type->WHERE: {
					buffer += "WHERE";
				}

				label Type->INSERT: {
					buffer += "INSERT";
				}

				label Type->INTO: {
					buffer += "INTO";
				}

				label Type->VALUES: {
					buffer += "VALUES";
				}

				label Type->LIKE: {
					buffer += "LIKE";
				}

				label Type->BETWEEN: {
					buffer += "BETWEEN";
